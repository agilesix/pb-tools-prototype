{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "pb-tools",
  "main": "./dist/_worker.js/index.js",
  // Update to today's date
  "compatibility_date": "2025-06-17",
  "compatibility_flags": ["nodejs_compat"],
  "assets": {
    "binding": "ASSETS",
    "directory": "./dist"
  },
  "observability": {
    "enabled": true
  },
  "env": {
    "preview": {
      "name": "pb-tools-preview",
      "vars": {
        "ENVIRONMENT": "preview"
      }
    }
  }
}
